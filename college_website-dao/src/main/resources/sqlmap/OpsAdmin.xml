<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jd.smart_fridge_ops.dao.OpsAdminDao">

	<!-- ops_admin 所有查询列 -->
	<sql id="QUERY_COLUMN_LIST">
		<![CDATA[id,erp_account AS erpAccount,email,name,root_level AS rootLevel,operation_level AS operationLevel,gmt_create AS gmtCreate,gmt_modify AS gmtModify]]>
	</sql>

	<!-- ops_admin 查询列来源表-->
	<sql id="QUERY_FROM_TABLE"><![CDATA[FROM ops_admin]]></sql>
	
	<!-- 全部条件(更多功能可以通过queryData扩展实现)  -->
	<sql id="QUERY_WHERE_CLAUSE">
		<where>
			<if test="id != null and id != ''"><![CDATA[AND id = #{id}]]></if>
			<if test="erpAccount != null and erpAccount != ''"><![CDATA[AND erp_account = #{erpAccount}]]></if>
			<if test="email != null and email != ''"><![CDATA[AND email = #{email}]]></if>
			<if test="name != null and name != ''"><![CDATA[AND name = #{name}]]></if>
			<if test="rootLevel != null and rootLevel != ''"><![CDATA[AND root_level = #{rootLevel}]]></if>
			<if test="operationLevel != null and operationLevel != ''"><![CDATA[AND operation_level = #{operationLevel}]]></if>
			<if test="gmtCreate != null and gmtCreate != ''"><![CDATA[AND gmt_create = #{gmtCreate}]]></if>
			<if test="gmtModify != null and gmtModify != ''"><![CDATA[AND gmt_modify = #{gmtModify}]]></if>
		</where>
	</sql>
	
	<!-- 智能排序与分页 -->
	<sql id="QUERY_ORDER_LIMIT_CONDTION">
		<if test="orderField != null and orderField != '' and orderFieldType != null and orderFieldType != ''"><![CDATA[ORDER BY ${orderField} ${orderFieldType}]]></if>
		<if test="startIndex != null and startIndex &gt;= 0 and pageSize != null and pageSize &gt; 0"><![CDATA[LIMIT #{startIndex},#{pageSize}]]></if>
	</sql>

	<!-- 更新列字段,只要不为NULL则更新,除开主键列 -->
	<sql id="UPDATE_COLUMN_SET">
		<set>
			<if test="erpAccount != null"><![CDATA[erp_account = #{erpAccount},]]></if>
			<if test="email != null"><![CDATA[email = #{email},]]></if>
			<if test="name != null"><![CDATA[name = #{name},]]></if>
			<if test="rootLevel != null"><![CDATA[root_level = #{rootLevel},]]></if>
			<if test="operationLevel != null"><![CDATA[operation_level = #{operationLevel},]]></if>
			<if test="gmtCreate != null"><![CDATA[gmt_create = #{gmtCreate},]]></if>
			<if test="gmtModify != null"><![CDATA[gmt_modify = #{gmtModify},]]></if>
		</set>
	</sql>

	<!-- 插入ops_admin记录 -->
	<insert id="insertEntry" parameterType="opsAdmin" >
		<![CDATA[
			INSERT INTO ops_admin (id,erp_account,email,name,root_level,operation_level,gmt_create,gmt_modify)
			VALUES (#{id},#{erpAccount},#{email},#{name},#{rootLevel},#{operationLevel},#{gmtCreate},#{gmtModify})
		]]>
	</insert>
	
	<!-- 返回插入的编号,在事务开启状态下有效 -->
	<select id="lastSequence" resultType="int"><![CDATA[SELECT LAST_INSERT_ID() AS id]]></select>

	<!-- 删除记录,主键IN(array) -->
	<delete id="deleteByArrayKey" parameterType="java.lang.reflect.Array" >
		<![CDATA[DELETE FROM ops_admin WHERE id IN]]>
		<foreach collection="array" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
	</delete>

	<!-- 删除,通过条件 -->
	<update id="deleteByCondtion" parameterType="opsAdmin" >
		<![CDATA[DELETE FROM ops_admin]]>
		<include refid="QUERY_WHERE_CLAUSE"/>
	</update>

	<!-- 修改记录通过主键 -->
	<update id="updateByKey" parameterType="opsAdmin" >
		<![CDATA[UPDATE ops_admin]]>
		<include refid="UPDATE_COLUMN_SET"/>
		<![CDATA[WHERE id = #{id}]]>
	</update>

	<!-- 查询,通过主键IN(array) -->
	<select id="selectEntryArray" parameterType="java.lang.reflect.Array" resultType="opsAdmin">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<![CDATA[WHERE id IN]]>
		<foreach collection="array" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
	</select>

	<!-- 查询,通过条件 -->
	<select id="selectEntryList" parameterType="opsAdmin" resultType="opsAdmin">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
		<include refid="QUERY_ORDER_LIMIT_CONDTION"/>
	</select>

	<!-- 总数查询,通过条件 -->
	<select id="selectEntryListCount" parameterType="opsAdmin" resultType="int">
		<![CDATA[SELECT COUNT(id) AS dataCount]]>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
	</select>
	
	<!-- 其它SQL语句 -->
	
	
</mapper>