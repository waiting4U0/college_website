<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jd.smart_fridge_ops.dao.OpsFunctionDao">

	<!-- ops_function 所有查询列 -->
	<sql id="QUERY_COLUMN_LIST">
		<![CDATA[id,name,url,resource_key AS resourceKey,parent_id AS parentId,icon, gmt_create AS gmtCreate,gmt_modify AS gmtModify]]>
	</sql>

	<!-- ops_function 查询列来源表-->
	<sql id="QUERY_FROM_TABLE"><![CDATA[FROM ops_function]]></sql>
	
	<!-- 全部条件(更多功能可以通过queryData扩展实现)  -->
	<sql id="QUERY_WHERE_CLAUSE">
		<where>
			<if test="id != null and id != ''"><![CDATA[AND id = #{id}]]></if>
			<if test="name != null and name != ''"><![CDATA[AND name = #{name}]]></if>
			<if test="url != null and url != ''"><![CDATA[AND url = #{url}]]></if>
			<if test="resourceKey != null and resourceKey != ''"><![CDATA[AND resource_key = #{resourceKey}]]></if>
			<if test="icon != null and icon != ''"><![CDATA[AND icon = #{icon}]]></if>
			<if test="parentId != null and parentId != ''"><![CDATA[AND parent_id = #{parentId}]]></if>
			<if test="gmtCreate != null and gmtCreate != ''"><![CDATA[AND gmt_create = #{gmtCreate}]]></if>
			<if test="gmtModify != null and gmtModify != ''"><![CDATA[AND gmt_modify = #{gmtModify}]]></if>
		</where>
	</sql>
	
	<!-- 智能排序与分页 -->
	<sql id="QUERY_ORDER_LIMIT_CONDTION">
		<if test="orderField != null and orderField != '' and orderFieldType != null and orderFieldType != ''"><![CDATA[ORDER BY ${orderField} ${orderFieldType}]]></if>
		<if test="startIndex != null and startIndex &gt;= 0 and pageSize != null and pageSize &gt; 0"><![CDATA[LIMIT #{startIndex},#{pageSize}]]></if>
	</sql>

	<!-- 更新列字段,只要不为NULL则更新,除开主键列 -->
	<sql id="UPDATE_COLUMN_SET">
		<set>
			<if test="name != null"><![CDATA[name = #{name},]]></if>
			<if test="url != null"><![CDATA[url = #{url},]]></if>
			<if test="resourceKey != null"><![CDATA[resource_key = #{resourceKey},]]></if>
			<if test="icon != null"><![CDATA[icon = #{icon},]]></if>
			<if test="1 == 1"><![CDATA[parent_id = #{parentId},]]></if>
			<if test="gmtCreate != null"><![CDATA[gmt_create = #{gmtCreate},]]></if>
			<if test="gmtModify != null"><![CDATA[gmt_modify = #{gmtModify},]]></if>
		</set>
	</sql>

	<!-- 插入ops_function记录 -->
	<insert id="insertEntry" parameterType="opsFunction" >
		<![CDATA[
			INSERT INTO ops_function (id,name,url,resource_key,icon,parent_id,gmt_create,gmt_modify)
			VALUES (#{id},#{name},#{url},#{resourceKey},#{icon},#{parentId},#{gmtCreate},#{gmtModify})
		]]>
	</insert>
	
	<!-- 返回插入的编号,在事务开启状态下有效 -->
	<select id="lastSequence" resultType="long"><![CDATA[SELECT LAST_INSERT_ID() AS id]]></select>

	<!-- 删除记录,主键IN(array) -->
	<delete id="deleteByArrayKey" parameterType="java.lang.reflect.Array" >
		<![CDATA[DELETE FROM ops_function WHERE id IN]]>
		<foreach collection="array" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
	</delete>

	<!-- 删除,通过条件 -->
	<update id="deleteByCondtion" parameterType="opsFunction" >
		<![CDATA[DELETE FROM ops_function]]>
		<include refid="QUERY_WHERE_CLAUSE"/>
	</update>

	<!-- 修改记录通过主键 -->
	<update id="updateByKey" parameterType="opsFunction" >
		<![CDATA[UPDATE ops_function]]>
		<include refid="UPDATE_COLUMN_SET"/>
		<![CDATA[WHERE id = #{id}]]>
	</update>

	<!-- 查询,通过主键IN(array) -->
	<select id="selectEntryArray" parameterType="java.lang.reflect.Array" resultType="opsFunction">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<![CDATA[WHERE id IN]]>
		<foreach collection="array" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
	</select>

	<!-- 查询,通过条件 -->
	<select id="selectEntryList" parameterType="opsFunction" resultType="opsFunction">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
		<include refid="QUERY_ORDER_LIMIT_CONDTION"/>
	</select>

	<!-- 总数查询,通过条件 -->
	<select id="selectEntryListCount" parameterType="opsFunction" resultType="int">
		<![CDATA[SELECT COUNT(id) AS dataCount]]>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
	</select>
	
	<!-- 其它SQL语句 -->
	
	
</mapper>