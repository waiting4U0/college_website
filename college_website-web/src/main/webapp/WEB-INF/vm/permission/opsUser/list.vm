								<!-- START 表格工具栏 -->
								<div class="table-toolbar">
									<div class="row">
										<!--增加，查询-->
										<div class="col-md-6">
											<div class="btn-group">
												<a class="btn green" role="button" href="javascript:;" onclick="opsUserJS.add('form_add');">新 增 <i class="fa fa-plus"></i> </a>
											</div>
										</div>
									</div>
								</div>
								<!-- END 表格工具栏 -->
								
								
								<!-- START 表格数据 -->
								<table class="table table-striped table-hover table-bordered" id="list_table">
								<thead>
								<tr>
									<th width="300px">
										 用户名称
									</th>
									<th width="300px">
										 用户ERP
									</th>
									<th width="300px">
										 用户角色
									</th>
									<th colspan="2" style="text-align:center">
										 操作
									</th>
								</tr>
								</thead>
								<tbody>
							     #foreach($item in ${listPage.getResult()})
									<tr id="tr_$!{item.id}" style="padding:2px;font-size:12px">
                                        <td name="ops_user_name"  style="word-break:break-all;text-align:left;">$!{item.name}</td>
                                        <td name="ops_user_erp"  style="word-break:break-all;text-align:left;">$!{item.erp}</td>
                                        <td name="ops_user_role"  style="word-break:break-all;text-align:left;">$!{item.roleName}</td>

										<td style="text-align:center;"><a class="btn green btn-sm" role="button" onclick="opsUserJS.update(this,$!{item.id});">修 改 <i class="fa fa-edit"></i> </a></td>
										<td style="text-align:center;"><a class="btn red btn-sm"   role="button" onclick="opsUserJS.del($!{item.id});">删 除<i class="fa fa-trash-o"></i> </a></td>

								    </tr>
							     #end	
								</tbody>
								</table>				
								 #parse("/permission/opsUser/listPage.vm")
								
							</div>
						</div>
