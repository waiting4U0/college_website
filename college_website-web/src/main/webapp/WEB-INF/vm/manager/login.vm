<!-- BEGIN LOGIN -->
<div class="content">

	<!-- BEGIN LOGIN FORM -->
	<form class="login-form" id="login_form" method="post" name="login_form">
		<div class="form-title">
			<span class="form-title">Welcome.</span>
			<span class="form-subtitle">请输入用户名和密码.</span>
		</div>
		<div class="alert alert-danger display-hide">
			<button class="close" data-close="alert"></button>
			<span>请输入用户名和密码. </span>
		</div>
		<div class="alert alert-warning display-hide">
			<button class="close" data-close="alert"></button>
			<span>账号或密码错误，请重新输入！ </span>
		</div>
		
		<div class="form-group">
			<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
			<label class="control-label visible-ie8 visible-ie9">Username</label>
			<input class="form-control form-control-solid placeholder-no-fix" type="text" autocomplete="off" placeholder="Username"  id="username" value="" name="username" />
		</div>
		<div class="form-group">
			<label class="control-label visible-ie8 visible-ie9">Password</label>
			<input class="form-control form-control-solid placeholder-no-fix" type="password" autocomplete="off" placeholder="Password"  id="password" value="" name="password" />
		</div>
		<div class="form-actions">
			<button  id="submit_btn" type="submit" class="btn btn-primary btn-block uppercase">Login</button>
		</div>
		<div class="form-actions">
			<div class="pull-left">
				<label class="rememberme check">
				<input type="checkbox" name="remember" value="1"/>Remember me </label>
			</div>
			<div class="pull-right forget-password-block">
				<a href="javascript:;" id="forget-password" class="forget-password"></a>
			</div>
		</div>
	</form>
		
